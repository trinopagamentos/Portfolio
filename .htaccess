RewriteEngine On
RewriteBase /

# Bloqueia indexacao por cabecalho HTTP (fallback se meta tags forem ignoradas)
<IfModule mod_headers.c>
Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet"
</IfModule>

# Serve arquivos f√≠sicos normalmente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Reescreve tudo para index.html (para /trinopay, /trinoempresas, /p, /e, hashes e query params)
RewriteRule ^ index.html [L]
